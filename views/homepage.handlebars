<!-- Loop over each object in the projects array -->
<div class="slick">
    {{#each projects as |project| }}
    <div>
      <div class="card" style="width:400px">
        <img class="card-img-top" src="{{project.image}}" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">{{project.name}}</h5>
          {{project.description}}
        </div>
        <div class="card-footer">
          <p class="card-text">Created by {{project.user.name}} on {{format_date project.date_created}}</p>
          <a href="/project/{{project.id}}" class="btn btn-primary">{{project.name}}</a>
        </div>
      </div>
    </div>
    {{/each}}
</div>
