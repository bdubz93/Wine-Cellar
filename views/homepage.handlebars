<!-- Loop over each object in the projects array -->

<div class="slick">
    {{#each projects as |project| }}
    <div>
      <div class="card card-bg ml-3">
        <div class="card-header bg-white">
        <img class="card-img-top " src="{{project.image}}" alt="Card image cap">
        </div>
        <div class="card-body card-text">
          <h5 class="card-title">{{project.name}}</h5>
          {{project.description}}
        </div>
        <div class="card-footer">
          <p class="card-text">Created by {{project.user.name}} on {{format_date project.date_created}}</p>
          <a href="/project/{{project.id}}" class="btn btn-primary mx-auto d-block">{{project.name}}</a>
        </div>
      </div>
    </div>
    {{/each}}
</div>
