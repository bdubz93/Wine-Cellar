<div class="card">
<div class="card-body">
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

      {{#if projects.length}}
      <div class="col-md-6 project-list">
        <h3>Current Wines:</h3>
        {{#each projects as |project|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
          </div>
          <div class="col-md-4">
            <img src="{{image}}" alt="Card image cap" width="150" 
     height="200" />
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}

<script src="./js/profile.js"></script>
